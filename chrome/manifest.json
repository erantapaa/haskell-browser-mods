{
  "name": "haskell-browser-mods",
  "version": "0.1.0.4",
  "description": "Enhancements to Haskell-related websites",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "homepage_url": "https://github.com/statusfailed/hackage-fu",

  "web_accessible_resources": [
    "haskellnews.js",
    "haddock-index.js",
    "awesomplete.css",
    "jquery.min.js",
    "ocean-patch.css",
    "mousetrap.min.js",
    "plus.gif",
    "minus.gif",
    "hayoo.css",
    "hayoo.js",
    "hayoo2.js"
  ],

  "content_scripts": [
  { "js": [ "hdiff.js" ],
    "matches": [ "*://hdiff.luite.com/cgit*" ],
    "run_at": "document_end"
  },
  { "js": [ "jquery.min.js", "mousetrap.min.js", "hackage.js" ],
    "matches": [ "*://hackage.haskell.org/package/*" ],
    "run_at": "document_end"
  },
  { "js": [ "inject-haskellnews.js" ],
    "matches": [ "*://haskellnews.org/*" ],
    "run_at": "document_end"
  } /*,
  { "js": [ "jquery.min.js", "hayoo.js", "hayoo2.js" ],
    "matches": [ "*://hayoo.fh-wedel.de/*" ],
    "run_at": "document_end"
  } */
  ],

  "permissions": [ "tabs",
                   "*://hdiff.luite/cgit*",
                   "*://hackage.haskell.org/*",
                   "*://haskellnews.org/*"
                 ],

  "manifest_version": 2
}
